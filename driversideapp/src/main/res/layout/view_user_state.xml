<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/advanceRideStateLayout">

    <ImageButton
        android:id="@+id/advanceButton"
        android:layout_width="50dp"
        android:layout_height="53dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/white"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/confirm_arrived" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:includeFontPadding="false"

        android:text="@string/arrived_at_destination"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/advanceButton"
        app:layout_constraintTop_toTopOf="@+id/advanceButton" />
</androidx.constraintlayout.widget.ConstraintLayout>